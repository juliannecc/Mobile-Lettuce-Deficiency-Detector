<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#406661"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="LettuceAID"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textColor="#90e689"
        android:textStyle="bold"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ImageView"
        android:layout_below="@+id/title"
        android:layout_height="336sp"
        android:layout_width="336sp"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        app:shapeAppearanceOverlay="@style/roundedImageStyle"
        />

    <TextView
        android:id="@+id/ResultBg"
        android:layout_below="@+id/ImageView"
        android:layout_centerHorizontal="true"
        android:layout_width="336sp"
        android:layout_height="80sp"
        android:layout_marginTop="20sp"
        android:textColor="#c1c1c1"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/rounded_corner"
        />

    <TextView
        android:id="@+id/ResultLabel"
        android:layout_below="@+id/ImageView"
        android:layout_centerHorizontal="true"
        android:layout_width="336sp"
        android:layout_height="30sp"
        android:layout_marginTop="30sp"
        android:textColor="#c1c1c1"
        android:text="Diagnosis:"
        android:textStyle="bold"
        android:textSize='20dp'
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/Result"
        android:layout_below="@+id/ImageView"
        android:layout_centerHorizontal="true"
        android:layout_width="336sp"
        android:layout_height="80sp"
        android:layout_marginTop="30sp"
        android:textColor="#486464"
        android:text=" "
        android:textStyle="bold"
        android:textSize='22dp'
        android:gravity="center"
        />


    <Button
        android:id="@+id/CameraBtn"
        android:layout_width="336sp"
        android:layout_height="50sp"
        android:text="Capture Image Using Camera"
        android:layout_below="@+id/Result"
        android:backgroundTint="#6aa975"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        app:shapeAppearanceOverlay="@style/roundedImageStyle"

        />

    <Button
        android:id="@+id/SelectBtn"
        android:layout_below="@+id/CameraBtn"
        android:layout_width="336sp"
        android:layout_height="50sp"
        android:text="Select from Gallery"
        android:backgroundTint="#6aa975"
        android:layout_centerHorizontal="true"
        app:shapeAppearanceOverlay="@style/roundedImageStyle"

        />


